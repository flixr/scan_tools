<package>
  <description brief="canonical_scan_matcher">

     A wrapper around Andrea Censi's Canonical Scan Matcher implementation, used for laser scan registration.
     More about CSM: http://www.cds.caltech.edu/~andrea/research/sw/csm.html

  </description>
  <author>Ivan Dryanovski</author>
  <license>GPL</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/canonical_scan_matcher</url>
  <depend package="roscpp"/>
  <depend package="nodelet"/>
  <depend package="sensor_msgs"/>
  <depend package="tf"/>
  <depend package="pcl"/>
  <depend package="pcl_ros"/>
  <depend package="geometry_msgs"/>
  <depend package="nav_msgs"/>
  <depend package="sensor_msgs"/>
  <depend package="csm_install"/>

  <export>
    <nodelet plugin="${prefix}/canonical_scan_matcher_nodelet.xml" />
  </export>

</package>


