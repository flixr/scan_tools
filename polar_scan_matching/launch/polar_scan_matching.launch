<launch>
  <rosparam>
    /hokuyo_node/min_ang: -2.0862138271331787
    /hokuyo_node/max_ang:  2.0923497676849365
  </rosparam>

  <node pkg="hokuyo_node" type="hokuyo_node" name="hokuyo_node" output="screen">
    <param name="frame_id" value="/laser"/>
    <param name="port" value="/dev/ttyACM0"/>
  </node>

  <node pkg="polar_scan_matching" type="polar_scan_matching" name="polar_scan_matching" output="screen">
    <param name="max_error" value="0.15"/>
  </node>

  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" 
    args="0.2 -0.6 0.5 0 0 0 /base_link /laser 40" />

  <node pkg="rviz" type="rviz" name="rviz"/>

</launch>
